CREATE TABLE Student (
    Id INT PRIMARY KEY,
    Name NVARCHAR(100), -- Assuming names can be up to 100 characters long
    Branch VARCHAR(50), -- Branch name, assumed to be a shorter string
    Marks DECIMAL(5, 2), -- Marks with a precision of 5 digits and 2 decimal places
    Location NVARCHAR(100) -- Location where the student resides
);
-- Create procedure to get count of students by marks range
CREATE PROCEDURE Get_Count_By_Marks
    @minMarks DECIMAL(5, 2),
    @maxMarks DECIMAL(5, 2)
AS
BEGIN
    -- Query to fetch count of students by marks within the given range
    SELECT Marks, COUNT(*) AS "Number of Students"
    FROM Students
    WHERE Marks BETWEEN @minMarks AND @maxMarks
    GROUP BY Marks
    ORDER BY Marks DESC;
END;
